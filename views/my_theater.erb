<% @title = "登録" %>
<h1 class="title my-3 text-center">映画館登録</h1>
<% if @miss.present? %>
<p class="my-1 text-center">最寄りの映画館を選んでください</p>
<% end%>
<div class="container-fluid">
      <div class="row justify-content-center">
        <div class="card my-2 align-items-center signup">
          <div class="card-body">
            <form action="/mytheater" method="post" id="form">
                <p class="login">
                    <select name="mytheater" class="form-control login" required>
                        <option disabled selected value>Choose My Theater</option>
                    <% @theaters.each do |theater| %>
                        <option value="<%= theater.name %>"><%= theater.official %></option>
                    <% end %>
                    </select>
                </p>
                <p>
                    <input type="submit" value="登録" class="form-control login submit">
                </p>
            </form>
          </div>
        </div>
      </div>
</div>