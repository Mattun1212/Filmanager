<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>リーダーズ13th確認テスト</title>
	<link rel="stylesheet" href="/assets/css/count.css">
</head>
<body>
	<form action="/create" method="post">
	  <div class="container">
		<div><input type="text" name="title" class="text"></div>
		<div><input type="submit" value="追加" class="button"></div>
	  </div>
	</form>
	<%@numbers.each do |number|%>
	<form action="/edit/<%=number.id%>" method="post">
	  <div class="container">
		<div><input type="text" value="<%=number.title%>" name="title" class="text"></div>
		<div><input type="submit" value="編集" class="button"></div>
	  </div>
	</form>
	<h1><%=number.number%></h1>
	<form action="/plus/<%=number.id%>" method="post">
		<input type="submit" value="+">
	</form>
	
	<form action="/minus/<%=number.id%>" method="post">
		<input type="submit" value="-">
	</form>
	
	<form action="/multi/<%=number.id%>" method="post">
		<input type="submit" value="×2">
	</form>
	
	<form action="/div/<%=number.id%>" method="post">
		<input type="submit" value="÷2">
	</form>
	
	<form action="/clear/<%=number.id%>" method="post">
		<input type="submit" value="clear">
	</form>
	<%end%>
</body>
</html>
